<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    tools:context=".Game_Activity" >

<!--     <TextView -->
<!--         android:layout_width="wrap_content" -->
<!--         android:layout_height="wrap_content" -->
<!--         android:layout_centerHorizontal="true" -->
<!--         android:textSize="15.5sp" -->
<!--         android:text="@string/level_one" />  -->
     
  	<LinearLayout
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content" 
  	    	android:layout_centerHorizontal="true">

    	<TextView

	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textSize="40sp"
	android:text="Time"/>
    	    
	<TextView
	android:id="@+id/mycounter"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:layout_centerHorizontal="true"
	android:textSize="40sp"/>
	</LinearLayout> 
<TextView
	    android:id="@+id/score"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true" />
        
	<ImageView android:id="@+id/birdView" 
	    android:layout_width="400dp" 
	    android:layout_height="400dp" 
	    android:layout_centerHorizontal="true" 
	    android:layout_marginTop="50dp"
	    android:scaleType="fitXY" />
	
	<ImageView
	    android:id="@+id/nestView1"
	    android:layout_width="200dp"
	    android:layout_height="200dp"
	    android:gravity="top|left"
	    android:scaleType="fitXY" >
	    
	</ImageView>

	
	<ImageView
	    android:id="@+id/nestView4"
	    android:layout_width="200dp"
	    android:layout_height="200dp"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:scaleType="fitXY" />

	<ImageView
	    android:id="@+id/nestView3"
	    android:layout_width="200dp"
	    android:layout_height="200dp"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:scaleType="fitXY"  />

		<ImageView
	    android:id="@+id/nestView2"
	    android:layout_width="200dp"
	    android:layout_height="200dp"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"

	    android:scaleType="fitXY"  />
	
	    <include android:id="@+id/login_slider"
             layout="@layout/sliding_bar"/>
    
</RelativeLayout>

